@page "/employeeoverview"

<h2>Employee Overview</h2>

@if (Employees == null)
{
    <p><em>Loading..!</em></p>
}
else
{
    <div class="row">
        @foreach (var employee in Employees)
        {
            <QuickViewPopup Employee="_selectedEmployee"></QuickViewPopup>
            <div class="col-12 col-md-6 col-lg-12 col-sm-12 col-xl-3">
                <ErrorBoundary>
                    <ChildContent>
                        <EmployeeCard Employee="employee" OnViewClicked="ShowPopupView"></EmployeeCard>
                    </ChildContent>
                    <ErrorContent >
                        <p class="errorUI">

                        Inavild Employee
                        </p>
                    </ErrorContent>
                </ErrorBoundary>
            </div>

        }
    </div>
}